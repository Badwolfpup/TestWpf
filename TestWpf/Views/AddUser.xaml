<Window x:Class="TestWpf.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpf.Views"
        mc:Ignorable="d"
        Title="AddUser" Height="300" Width="300">
    <Grid>
        <Label Content="Name" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25,20"></Label>
        <TextBox Height="30" Width="200" Text="{Binding Name}" Margin="25,50" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="2" BorderBrush="Gray"></TextBox>

        <Label Content="Email" Margin="25,100" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
        <TextBox Height="30" Width="200" Text="{Binding Email}" Margin="25,130,0,0" Padding="5" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBox>

        <Button Height="30" Width="80" Command="{Binding AddUserCommand}" Margin="25, 180,0,0" Content="Add user" VerticalAlignment="Top" HorizontalAlignment="Left"></Button>
    </Grid>
</Window>
